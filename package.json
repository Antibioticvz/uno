{
  "name": "uno",
  "private": true,
  "version": "0.1.0",
  "description": "UNO Lite monorepo",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build -w @uno/core && npm run build -w @uno/bot && npm run build -w @uno/web",
    "dev": "npm run dev -w @uno/bot",
    "dev:web": "npm run dev -w @uno/web",
    "lint": "npm run lint -ws",
    "format": "npm run format -ws",
    "test": "npm run test -ws"
  }
}
